<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".UpdateEmp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:weightSum="3">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/updatedel" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="2"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Update employee"
            android:textSize="28sp" />
    </LinearLayout>
    <EditText
        android:id="@+id/empID"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:hint="Employee ID"
        android:inputType="number"
        android:maxLines="1"
        android:fontFamily="@font/poppins_light"
       />
    <EditText
        android:id="@+id/empName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:hint="Employee Name"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:fontFamily="@font/poppins_light"
        />

    <EditText
        android:id="@+id/empAge"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:hint="Employee Age"
        android:inputType="number"
        android:maxLines="1"
        android:fontFamily="@font/poppins_light"
        />
    <EditText
        android:id="@+id/empSalary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:hint="Employee Salary"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:fontFamily="@font/poppins_light"
     />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_light"
        android:text="Marital Status"/>
    <RadioGroup
        android:id="@+id/marriedOpt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/rbYes"
            android:fontFamily="@font/poppins_light"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Married"/>
        <RadioButton
            android:id="@+id/rbNo"
            android:fontFamily="@font/poppins_light"
            android:text="Unmarried"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </RadioGroup>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:fontFamily="@font/poppins_light"
        android:textSize="12dp"
        android:text="Note: You can not change employee ID."/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_button"
        android:text="Update Employee"
        android:onClick="UpdateEmployee"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="15sp"
        android:textColor="@android:color/background_light" />
</LinearLayout>
</LinearLayout>
